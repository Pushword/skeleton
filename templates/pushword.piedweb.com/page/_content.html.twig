{% extends '@Pushword/page/_content.html.twig' %}

{% set container = 'p-3 prose dark:prose-light' %}

{% block toc %}{% endblock %}

{% block content %}


    {% if page.toc is not null %}
    {% block h1 %} {% endblock %}
    <div class="flex flex-wrap">

        <div class="order-2 w-full overflow-hidden lg:order-1 lg:w-4/5">
            <div class="p-3 prose dark:prose-light">
                <h1>{{ page.content.title(true)|raw }}</h1>
                {{ page.content.intro|raw }}
            </div>
        </div>

        {% if page.content.toc is not empty %}
        <div class="order-3 w-full overflow-hidden lg:order-2 lg:w-1/5">
            <div class="max-w-screen-sm p-2 pt-4 m-2 border border-gray-200 rounded dark:border-gray-700 lg:max-w-xs lg:absolute">
                <h3 class="block px-3 mb-3 text-sm font-semibold tracking-wide text-gray-900 uppercase dark:text-gray-100 lg:mb-3 lg:text-xs">Contents</h3>
                <div class="prose-sm dark:prose-light">{{ page.content.toc|raw }}</div>
            </div>
        </div>
        {% endif %}

        <div class="order-4 w-full overflow-hidden lg:w-4/5">
            <div class="{{ container }} ">{{ page.content.content|raw }}</div>
        </div>

    </div>
    {% else %}
            <div class="p-3 prose dark:prose-light">
                <h1>{{ page.content.title(true)|raw }}</h1>
            </div>

        {{ parent() }}
    {% endif %}

    <div class="flex mx-3 mt-5">

        {{ _self.previous(nav, page) }}

        {{ _self.next(nav, page) }}
    </div>

{% endblock %}


{% macro next(nav, page) %}
    {% set next_is_the_one = false %}
    {% for n in nav %}

        {% if next_is_the_one and n.2 is not defined %}
            <a class="flex ml-auto text-right text-gray-500 hover:text-gray-900 dark:hover:text-gray-100" href="{{ n.1 == '#' ? '#' : page(n.1)}}">
                {{ n.0 }} <span aria-hidden="true" class="ml-2">→</span>
            </a>
            {% set next_is_the_one = false %}
        {% endif %}

        {% if n.2 is not defined and n.1 == page.realSlug %}
            {% set next_is_the_one = true %}
        {% endif %}
    {% endfor %}

{% endmacro %}

{% macro previous(nav, page) %}


    {% set previous = null %}

    {% for n in nav %}
        {% if n.2 is not defined and n.1 == page.realSlug and previous is not null %}
            <a class="flex mr-8 text-gray-500 hover:text-gray-900 dark:hover:text-gray-100" href="{{ previous.1 == '#' ? '#' : page(previous.1)}}">
                <span aria-hidden="true" class="mr-2">←</span> {{ previous.0 }}
            </a>
        {% endif %}

        {% if n.2 is not defined %}
            {% set previous = n %}
        {% endif %}
    {% endfor %}


{% endmacro %}